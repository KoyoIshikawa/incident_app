<%= form_with model: incident, local: true do |form| %>
  <div class="form-group row">
    <%= form.label :user, "Email", class: "col-sm-2 col-form-label"%>
    <div class="col-sm-10">
      <%= form.label :user, "#{incident.user.email}", class: "form-control-plaintext" %>
    </div>
  </div>
  <div class="form-group row">
    <%= form.label :incident, "事象", class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_field :incident, class: " form-control" %>    
    </div>
  </div>
  <div class="form-group row">
    <%= form.label :solution, "解決方法", class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_area :solution, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <%= form.label :os_name, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.select :os_name_id, OsName.all.collect { |os| [os.name, os.id] }, { prompt: "OSを選択してください" }, { class: "form-control" } %>
    </div>
  </div>
  <div class="form-group row">
    <%= form.label :status, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.select :status_id, Status.all.collect { |status| [status.status, status.id] }, { prompt: "ステータスを選択してください" }, { class: "form-control" } %>
    </div>
  </div>
  <div class="form-group row">
    <%= form.label :coding_lang, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.select :coding_lang_id, CodingLang.all.collect { |coding_lang| [coding_lang.name, coding_lang.id] }, { prompt: "言語を選択してください" }, { class: "form-control" } %>
    </div>
  </div>
  
  <div class="form-group row ">    
    <%= form.submit button_value, data: {confirm: "#{button_value}しますか？"}, class: "btn btn-primary page-btn"%>
  </div>
<% end %>

  <%= link_to "戻る", :back, data: {confirm: "保存しないで戻ります。よろしいですか？"}, class: "btn btn-secondary page-btn" %>
